<?xml version="1.0" encoding="UTF-8"?><!-- edited with XMLSPY v5 rel. 2 U (http://www.xmlspy.com) by Ann Wrightson and Anna Harvey (HEDRA Limited) --><xsd:schema targetNamespace="http://www.govtalk.gov.uk/CM/gms" xmlns="http://www.govtalk.gov.uk/CM/gms" xmlns:pdt="http://www.govtalk.gov.uk/people/PersonDescriptives" xmlns:bs7666="http://www.govtalk.gov.uk/people/bs7666" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:core="http://www.govtalk.gov.uk/core" elementFormDefault="qualified" attributeFormDefault="unqualified" version="2" id="ERMS-record">	<xsd:annotation>		<xsd:documentation> v1.0 to v1.1:  Corrected ordering of "Addressee" and "Aggregation".		v 1.2 put back, the spec has been corrected to alphabetical order		v2: Namespaces and schema structure revised following GovTalk review. 	       </xsd:documentation>	            <xsd:appinfo>                         <Metadata xmlns="http://www.govtalk.gov.uk/CM/gms-xs">                                 <Audience>e-records software suppliers</Audience>                                 <Audience>e-records integrators</Audience>                                <Audience>archivists and records managers</Audience>                                <Contributor>National Archives</Contributor>                                 <Contributor>Office of the e-Envoy</Contributor>                                 <Creator>Hedra Ltd http://www.hedra.com</Creator>                                 <Date>                                         <Created>2004-02-12</Created>                                 </Date>                                 <Date>                                         <Valid>                                                 <BeginningDate>2004</BeginningDate>                                         </Valid>                                 </Date>                                 <Description>Schema to represent the 2003 local implementation of e-GMS2 in ERMS (Electronic Records Management System) metadata at record level of aggregation</Description>                                 <Format>                                         <MediaType>text/xml</MediaType>                                         <Syntax>http://www.w3.org/2001/XMLSchema</Syntax>                                         <Description>XML schema, W3C Recommendation 2001</Description>                                 </Format>                                 <Identifier>{http://www.govtalk.gov.uk/Archives and records management}ERM schemas</Identifier>                                 <Language>[ISO 639-2/B] ENG</Language>                                 <Relation>                                         <Requires>{http://www.govtalk.gov.uk/people/bs7666}</Requires>                                 </Relation>                                 <Relation>                                         <ProvidesDefinitionOf>ERMS record level metadata</ProvidesDefinitionOf>                                 </Relation>                                 <Rights>unclassified</Rights>                                 <Rights>                                         <Copyright>Crown copyright 2004</Copyright>                                 </Rights>                                 <Subject>                                         <Category>Information management</Category>                                 </Subject>                                 <Subject>                                         <Project></Project>                                 </Subject>                                 <Title>ERMS record level schema</Title>                                 <Type>record</Type>                         </Metadata>                 </xsd:appinfo>	</xsd:annotation>	<xsd:include schemaLocation="ERMS-general-subelements-v2.xsd"/>	<xsd:import namespace="http://www.govtalk.gov.uk/core" schemaLocation="Govtalk/CommonSimpleTypes-v1-3.xsd"/>	<xsd:import namespace="http://www.govtalk.gov.uk/people/PersonDescriptives" schemaLocation="Govtalk/PersonDescriptiveTypes-v1-0.xsd"/>	<xsd:import namespace="http://www.govtalk.gov.uk/people/bs7666" schemaLocation="Govtalk/BS7666-v1-3.xsd"/>	<xsd:element name="Metadata">		<xsd:annotation>			<xsd:documentation> This element contains the ERMS metadata. </xsd:documentation>		</xsd:annotation>		<xsd:complexType>			<xsd:sequence>				<xsd:element ref="Addressee" minOccurs="0" maxOccurs="unbounded"/>				<xsd:element ref="Aggregation"/>				<xsd:element ref="Creator" minOccurs="0" maxOccurs="unbounded"/>				<xsd:element ref="Date"/>				<xsd:element ref="Description" minOccurs="0" maxOccurs="unbounded"/>				<xsd:element ref="Disposal" maxOccurs="unbounded"/>				<xsd:element ref="Identifier"/>				<xsd:element ref="Language" minOccurs="0" maxOccurs="unbounded"/>				<xsd:element ref="Location" minOccurs="0"/>				<xsd:element ref="Mandate" minOccurs="0" maxOccurs="unbounded"/>				<xsd:element ref="Relation" minOccurs="0" maxOccurs="unbounded"/>				<xsd:element ref="Rights" minOccurs="0" maxOccurs="unbounded"/>				<xsd:element ref="Subject" minOccurs="0" maxOccurs="unbounded"/>				<xsd:element ref="Title"/>				<xsd:element ref="Type" minOccurs="0"/>			</xsd:sequence>		</xsd:complexType>	</xsd:element>	<xsd:element name="Aggregation">		<xsd:simpleType>			<xsd:annotation>				<xsd:documentation> This element states the aggregation levels to which Record metadata applies.</xsd:documentation>			</xsd:annotation>			<xsd:restriction base="xsd:string">				<xsd:enumeration value="record"/>				<xsd:enumeration value="marker (record)"/>			</xsd:restriction>		</xsd:simpleType>	</xsd:element>	<xsd:element name="Date">		<xsd:complexType>			<xsd:annotation>				<xsd:documentation> This type contains the Date structure used in Record metadata.</xsd:documentation>			</xsd:annotation>			<xsd:sequence>				<xsd:element ref="Created"/>				<xsd:element ref="Acquired" minOccurs="0"/>				<xsd:element ref="Declared"/>			</xsd:sequence>		</xsd:complexType>	</xsd:element>	<xsd:element name="Identifier">		<xsd:complexType>			<xsd:annotation>				<xsd:documentation> This type contains the Identifier structure used in Record metadata.</xsd:documentation>			</xsd:annotation>			<xsd:sequence>				<xsd:element ref="SystemID"/>			</xsd:sequence>		</xsd:complexType>	</xsd:element>	<xsd:element name="Relation">		<xsd:complexType>			<xsd:annotation>				<xsd:documentation> This type contains the Relation structure used in Record metadata. The parent-child relationship between a Folder and its Records is expressed in the Record metadata using the e-GMS standard refinement IsPartOf . </xsd:documentation>			</xsd:annotation>			<xsd:sequence>				<xsd:element ref="IsCopyOf" minOccurs="0"/>				<xsd:element ref="IsPartOf"/>				<xsd:element ref="IsExtractOf" minOccurs="0"/>				<xsd:element ref="ExtractComment" minOccurs="0"/>				<xsd:element ref="IsRenditionOf" minOccurs="0"/>				<xsd:element ref="SeeAlso" minOccurs="0"/>				<xsd:element ref="HybridPaperLink" minOccurs="0"/>			</xsd:sequence>		</xsd:complexType>	</xsd:element>	<xsd:element name="Type">		<xsd:complexType>			<xsd:annotation>				<xsd:documentation> This type contains the Type structure used in Record metadata. </xsd:documentation>			</xsd:annotation>			<xsd:sequence>				<xsd:element name="RecordType" type="xsd:string" minOccurs="0"/>			</xsd:sequence>		</xsd:complexType>	</xsd:element></xsd:schema>