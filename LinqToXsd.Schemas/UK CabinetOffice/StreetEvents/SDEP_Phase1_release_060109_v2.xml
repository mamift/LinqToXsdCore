<?xml version="1.0" encoding="UTF-8" standalone="yes"?><!-- Edited by Emilio Nicoli (Jacobs Babtie GeoSpatial) 27/03/2006 --> <xsd:schema xmlns:sch="http://www.ascc.net/xml/schematron" xmlns:apd="http://www.govtalk.gov.uk/people/AddressAndPersonalDetails" xmlns:core="http://www.govtalk.gov.uk/core" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://schemas.elgin.gov.uk/sdep/roadevents" xmlns:bs7666="http://www.govtalk.gov.uk/people/bs7666" xmlns:gml="http://www.opengis.net/gml" xmlns:osgb="http://www.ordnancesurvey.co.uk/xml/namespaces/osgb" targetNamespace="http://schemas.elgin.gov.uk/sdep/roadevents" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1" id="RoadEvents">	<!--==============================================-->	<!--=                 Schema For Road Works / Events                 =-->	<!--==============================================-->	<xsd:annotation>		<xsd:documentation>Schema developed by Road Works Partners to enable Road Works / Events information to be distributed.		</xsd:documentation>	</xsd:annotation>	<xsd:annotation>		<xsd:appinfo xmlns:gms="http://www.govtalk.gov.uk/CM/gms">			<Metadata xmlns="http://www.govtalk.gov.uk/CM/gms-xs">				<Audience>e-service developers</Audience>				<Contributor>Emilio Nicoli [emilio.nicoli@jacobs.com]</Contributor>				<Contributor>Andy Hunt [andy.hunt@mayrise.co.uk]</Contributor>				<Contributor>Eddie Curtis [eddie.curtis@snowflakesoftware.com]</Contributor>				<Creator>SDEP</Creator>				<Date>					<Created>2005-11-01</Created>				</Date>				<Date>					<Modified>2006-03-27</Modified>				</Date>				<Description>Schema For Road Works / Events </Description>				<Format>					<MediaType>text/xml</MediaType>					<Syntax>http://www.w3.org/2001/XMLSchema</Syntax>					<Description>XML schema, W3C Recommendation 2001</Description>				</Format>				<Identifier>RoadEvents</Identifier>				<Language>[ISO 639-2/B] ENG</Language>				<Publisher>SDEP</Publisher>				<Rights>Unclassified				<Copyright>?</Copyright>				</Rights>				<Subject>					<Category>Transport, People, EDG</Category>				</Subject>				<Subject>					<Project>Street works</Project>				</Subject>				<Title>Road Events</Title>				<Type>message</Type>			</Metadata>		</xsd:appinfo>		<xsd:documentation>Below are the referenced schemas</xsd:documentation>	</xsd:annotation>	<xsd:import namespace="http://www.govtalk.gov.uk/people/AddressAndPersonalDetails" schemaLocation="./www.govtalk.gov.uk/PersonalDetailsTypes-v1-3.xsd"/>	<xsd:import namespace="http://www.govtalk.gov.uk/core" schemaLocation="./www.govtalk.gov.uk/CommonSimpleTypes-v1-3.xsd"/>	<xsd:import namespace="http://www.govtalk.gov.uk/people/bs7666" schemaLocation="./www.govtalk.gov.uk/BS7666-v1-3.xsd"/>	<xsd:import namespace="http://www.opengis.net/gml" schemaLocation="./gml/GML-3.1.1/base/geometryBasic2d.xsd"/>	<xsd:import namespace="http://www.opengis.net/gml" schemaLocation="./gml/GML-3.1.1/base/feature.xsd"/>	<!--==============================================-->	<!--=                 Road Events Elements                                   =-->	<!--==============================================-->	<!--Road Event List - Root or parent element (holds a list of Road Events)-->	<xsd:element name="RoadEventList" type="RoadEventListType">		<xsd:annotation>			<xsd:documentation>This list is returned by a RequestStreetEventsMethod method or passed to a ReceiveStreetEventsMethod  method of a web service.</xsd:documentation>		</xsd:annotation>	</xsd:element>	<xsd:complexType name="RoadEventListType">		<xsd:annotation>			<xsd:documentation>List of Road Events</xsd:documentation>		</xsd:annotation>		<xsd:sequence>			<xsd:element ref="RoadEvent" minOccurs="0" maxOccurs="unbounded">				<xsd:annotation>					<xsd:documentation>A RoadEventList can be empty.  </xsd:documentation>				</xsd:annotation>			</xsd:element>		</xsd:sequence>		<xsd:attribute name="DateTimeGenerated" type="xsd:dateTime" use="required">			<xsd:annotation>				<xsd:documentation>Optional: Shows the time this list was generated</xsd:documentation>			</xsd:annotation>		</xsd:attribute>		<xsd:attribute name="OrganisationID" type="OrganisationIDType" use="required">			<xsd:annotation>				<xsd:documentation>This is the code of the organisation that generated this list of Road Events</xsd:documentation>			</xsd:annotation>		</xsd:attribute>		<xsd:attribute name="WebServiceURL">			<xsd:annotation>				<xsd:documentation>This is the URL of the web service that generated this list of Road Events.</xsd:documentation>			</xsd:annotation>		</xsd:attribute>	</xsd:complexType>	<xsd:element name="RoadEvent" substitutionGroup="gml:_Feature">		<xsd:annotation>			<xsd:documentation>One or more Road Events (RoadEventList has one or many of these)</xsd:documentation>		</xsd:annotation>		<xsd:complexType>			<xsd:complexContent>				<xsd:extension base="RoadEventType">					<xsd:attribute name="LastModified" type="xsd:dateTime" use="required">						<xsd:annotation>							<xsd:documentation>Last modified date for a RoadEvent could be the creation date </xsd:documentation>						</xsd:annotation>					</xsd:attribute>				</xsd:extension>			</xsd:complexContent>		</xsd:complexType>	</xsd:element>	<xsd:complexType name="BaseFeatureType" abstract="true">		<xsd:complexContent>			<xsd:restriction base="gml:AbstractFeatureType">				<xsd:sequence/>			</xsd:restriction>		</xsd:complexContent>	</xsd:complexType>	<xsd:complexType name="RoadEventType">		<xsd:annotation>			<xsd:documentation>This element contains the blueprint of a single event.</xsd:documentation>		</xsd:annotation>		<xsd:complexContent>			<xsd:extension base="BaseFeatureType">				<xsd:sequence>					<xsd:element name="Description">						<xsd:annotation>							<xsd:documentation>Description of RoadEvent</xsd:documentation>						</xsd:annotation>						<xsd:simpleType>							<xsd:restriction base="core:PopulatedStringType">								<xsd:maxLength value="255"/>							</xsd:restriction>						</xsd:simpleType>					</xsd:element>					<xsd:element name="Cause" type="CauseType">						<xsd:annotation>							<xsd:documentation>Cause – the principal cause or reason of the event’s existence, i.e. accident, roadworks, weather, etc.</xsd:documentation>						</xsd:annotation>					</xsd:element>					<xsd:element name="ResponsibleAuthority" type="OrganisationType">						<xsd:annotation>							<xsd:documentation>e.g. Highway Authority for Roadworks</xsd:documentation>						</xsd:annotation>					</xsd:element>					<xsd:element name="Originator" type="OrganisationType"/>					<xsd:element name="OriginatorEventReference">						<xsd:annotation>							<xsd:documentation>The Originator's unique reference for the event</xsd:documentation>						</xsd:annotation>						<xsd:simpleType>							<xsd:restriction base="core:PopulatedStringType">								<xsd:maxLength value="30"/>								<xsd:whiteSpace value="preserve"/>							</xsd:restriction>						</xsd:simpleType>					</xsd:element>					<xsd:element ref="Location" maxOccurs="unbounded"/>					<xsd:element name="Cancelled" type="xsd:boolean">						<xsd:annotation>							<xsd:documentation>True or False</xsd:documentation>						</xsd:annotation>					</xsd:element>					<xsd:element name="Planned" type="xsd:boolean"/>				</xsd:sequence>			</xsd:extension>		</xsd:complexContent>	</xsd:complexType>	<xsd:complexType name="EventDatimType">		<xsd:simpleContent>			<xsd:extension base="xsd:dateTime">				<xsd:attribute name="Estimated" type="xsd:boolean" use="required"/>			</xsd:extension>		</xsd:simpleContent>	</xsd:complexType>	<xsd:complexType name="OrganisationType">		<xsd:sequence>			<xsd:element name="OrganisationName" type="OrganisationNameType"/>			<xsd:element name="OrganisationID" type="OrganisationIDType"/>			<xsd:element name="OrganisationSectionName" type="OrganisationNameType"/>			<xsd:element name="OrganisationSectionID" type="OrganisationSectionIDType"/>			<xsd:element name="Contact" type="ContactType"/>		</xsd:sequence>	</xsd:complexType>	<xsd:complexType name="CauseType">		<xsd:choice>			<xsd:element name="Roadwork" type="xsd:string"/>			<xsd:element name="Obstruction" type="xsd:string">				<xsd:annotation>					<xsd:documentation>e.g. Skips and Scaffolding</xsd:documentation>				</xsd:annotation>			</xsd:element>			<xsd:element name="PublicEvent" type="xsd:string"/>			<xsd:element name="Accident" type="xsd:string"/>			<xsd:element name="Incident" type="xsd:string">				<xsd:annotation>					<xsd:documentation>e.g. Security Alerts</xsd:documentation>				</xsd:annotation>			</xsd:element>			<xsd:element name="Weather" type="xsd:string">				<xsd:annotation>					<xsd:documentation>e.g. Fog, Ice</xsd:documentation>				</xsd:annotation>			</xsd:element>		</xsd:choice>	</xsd:complexType>	<xsd:element name="Location">		<xsd:annotation>			<xsd:documentation>There can be multiple locations in a RoadEvent</xsd:documentation>		</xsd:annotation>		<xsd:complexType>			<xsd:sequence>				<xsd:element name="LocationDescription" minOccurs="0">					<xsd:annotation>						<xsd:documentation>Description of this specific location</xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:element name="StartDatim" type="EventDatimType"/>				<xsd:element name="EndDatim" type="EventDatimType"/>				<xsd:element name="Consequence" minOccurs="0">					<xsd:annotation>						<xsd:documentation>Consequence – any restriction that has resulted from the principal cause, i.e. any resulting traffic management, lane blockages, road closures, etc.</xsd:documentation>					</xsd:annotation>					<xsd:complexType>						<xsd:sequence>							<xsd:element name="RoadClosure" minOccurs="0"/>							<xsd:element name="TemporaryTrafficControl" minOccurs="0"/>							<xsd:element name="LaneClosure" minOccurs="0"/>							<xsd:element name="FootwayClosure" minOccurs="0"/>							<xsd:element name="IncreasedTrafficLoading" minOccurs="0"/>							<xsd:element name="Contra-Flow" minOccurs="0"/>						</xsd:sequence>					</xsd:complexType>				</xsd:element>				<xsd:element name="TrafficSensitive" type="xsd:boolean" minOccurs="0"/>				<xsd:element name="DisruptionPattern" type="xsd:string" minOccurs="0">					<xsd:annotation>						<xsd:documentation>e.g. Monday-Friday 9-5, rushhour</xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:sequence>					<xsd:choice>						<xsd:element ref="Point"/>						<xsd:element ref="LineString"/>						<xsd:element ref="Polygon"/>					</xsd:choice>					<xsd:element name="USRN" type="bs7666:USRNtype"/>				</xsd:sequence>				<xsd:element name="Postcode" type="bs7666:PostCodeType" minOccurs="0">					<xsd:annotation>						<xsd:documentation>Postcode if available.  This element is sometimes extracted from description fields.</xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:element name="Diversion" type="xsd:boolean"/>			</xsd:sequence>		</xsd:complexType>	</xsd:element>	<xsd:complexType name="RequestCriteriaType">		<xsd:annotation>			<xsd:documentation>Describes the bounds for a RoadEvenList.  This parameter is submitted at a Pull or Push (Get or Set)</xsd:documentation>		</xsd:annotation>		<xsd:sequence>			<xsd:element name="RequestLocation" type="RequestLocationType">				<xsd:annotation>					<xsd:documentation>This Location Type can contain USRNs or a Minimum Bounding Rectangles</xsd:documentation>				</xsd:annotation>			</xsd:element>			<xsd:element name="RequestTimeSpan">				<xsd:complexType>					<xsd:attribute name="StartDatim" type="xsd:dateTime">						<xsd:annotation>							<xsd:documentation>The start date is by default the current time and when the datatime is in the past.</xsd:documentation>						</xsd:annotation>					</xsd:attribute>					<xsd:attribute name="EndDatim" type="xsd:dateTime" use="required">						<xsd:annotation>							<xsd:documentation>All RoadEvents up to date</xsd:documentation>						</xsd:annotation>					</xsd:attribute>				</xsd:complexType>			</xsd:element>		</xsd:sequence>	</xsd:complexType>	<xsd:complexType name="ContactType">		<xsd:annotation>			<xsd:documentation>This element is used describe an individual person</xsd:documentation>		</xsd:annotation>		<xsd:sequence>			<xsd:element name="Name" type="apd:CitizenNameStructure"/>			<xsd:element name="ContactDetails" type="apd:CitizenContactDetailsStructure"/>		</xsd:sequence>	</xsd:complexType>	<xsd:simpleType name="OrganisationNameType">		<xsd:annotation>			<xsd:documentation>Name between 1 and 255 chars</xsd:documentation>		</xsd:annotation>		<xsd:restriction base="xsd:string">			<xsd:minLength value="1"/>			<xsd:maxLength value="255"/>		</xsd:restriction>	</xsd:simpleType>	<xsd:simpleType name="OrganisationIDType">		<xsd:annotation>			<xsd:documentation>4 digits</xsd:documentation>		</xsd:annotation>		<xsd:restriction base="xsd:string">			<xsd:minLength value="4"/>			<xsd:maxLength value="4"/>		</xsd:restriction>	</xsd:simpleType>	<xsd:simpleType name="OrganisationSectionIDType">		<xsd:annotation>			<xsd:documentation>3 digits</xsd:documentation>		</xsd:annotation>		<xsd:restriction base="xsd:string">			<xsd:minLength value="3"/>			<xsd:maxLength value="3"/>		</xsd:restriction>	</xsd:simpleType>	<xsd:complexType name="RequestLocationType">		<xsd:choice>			<xsd:element name="USRN" type="bs7666:USRNtype" maxOccurs="unbounded">				<xsd:annotation>					<xsd:documentation>One or more USRN</xsd:documentation>				</xsd:annotation>			</xsd:element>			<xsd:element ref="Polygon"/>		</xsd:choice>	</xsd:complexType>	<!--==============================================-->	<!--=                 Web Service Paramters and Receipts           =-->	<!--==============================================-->	<!--Request Pull Paramter-->	<xsd:element name="RequestPullParameter">		<xsd:annotation>			<xsd:documentation>Parameter passed to the Register Push method of the web service as argument for a pushed RoadEventList (send via a repeated batch-job to the ReceivePush method of requesting web service).</xsd:documentation>		</xsd:annotation>		<xsd:complexType>			<xsd:sequence>				<xsd:element name="RequestCriteriaGroup" type="RequestCriteriaType">					<xsd:annotation>						<xsd:documentation>These are the bounds in which the RoadEventList resides.  The Location element would contain all the USRN's or a bounding rectangle of all the road events. </xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:element name="WebServiceURL" type="xsd:string">					<xsd:annotation>						<xsd:documentation>Acts as identifier of requesting authority.  Data will be send to this URL </xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:element name="Cause" type="CauseType" minOccurs="0">					<xsd:annotation>						<xsd:documentation>Cause on exclusion basis.  E.g. when including "Incident" you will not get a RoadEventList caused by incidents</xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:element name="Organisation" type="OrganisationType" minOccurs="0"/>			</xsd:sequence>			<xsd:attribute name="DateTimeRequested" type="xsd:dateTime" use="required">				<xsd:annotation>					<xsd:documentation>Time and date a registration of interest was sent to the web service</xsd:documentation>				</xsd:annotation>			</xsd:attribute>		</xsd:complexType>	</xsd:element>	<!--Register Push Method Parameter and Receipt-->	<xsd:element name="RegisterPushParameter">		<xsd:annotation>			<xsd:documentation>Parameter passed to the RequestPull method of the web service as argument for a RoadEventList</xsd:documentation>		</xsd:annotation>		<xsd:complexType>			<xsd:sequence>				<xsd:element name="RequestLocation" type="RequestLocationType">					<xsd:annotation>						<xsd:documentation>This Location Type can contain USRNs and / or Minimum Bounding Rectangles</xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:element name="WebServiceURL" type="xsd:string">					<xsd:annotation>						<xsd:documentation>Data will be send to this URL </xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:element name="Cause" type="CauseType" minOccurs="0">					<xsd:annotation>						<xsd:documentation>Cause on exclusion basis.  E.g. when including "Incident" you will not get a RoadEventList caused by incidents</xsd:documentation>					</xsd:annotation>				</xsd:element>				<xsd:element name="Organisation" type="OrganisationType" minOccurs="0"/>			</xsd:sequence>			<xsd:attribute name="DateTimeRequested" type="xsd:dateTime" use="required">				<xsd:annotation>					<xsd:documentation>Date and time the parameter was sent</xsd:documentation>				</xsd:annotation>			</xsd:attribute>		</xsd:complexType>	</xsd:element>	<xsd:element name="RegisterPushReceipt">		<xsd:annotation>			<xsd:documentation>Returned by the web service after registering a push request. The web service can decide on the contend of the message.</xsd:documentation>		</xsd:annotation>		<xsd:complexType>			<xsd:complexContent>				<xsd:extension base="xsd:anyType">					<xsd:attribute name="Processed" type="xsd:boolean" use="required">						<xsd:annotation>							<xsd:documentation>If the registered push has been cancelled Processed with be set to True.  If the cancellation failed for some reason, Processed will be returned as False.</xsd:documentation>						</xsd:annotation>					</xsd:attribute>				</xsd:extension>			</xsd:complexContent>		</xsd:complexType>	</xsd:element>	<!-- Push Event Request Cancellation -->	<xsd:element name="CancelPushParameter">		<xsd:annotation>			<xsd:documentation>This parameter is passed to the CancelPush on the web service</xsd:documentation>		</xsd:annotation>		<xsd:complexType>			<xsd:sequence>				<xsd:element name="WebServiceURL" type="xsd:string">					<xsd:annotation>						<xsd:documentation>The web service will remove the registration of interest for a recurring push of data by WebServiceURL</xsd:documentation>					</xsd:annotation>				</xsd:element>			</xsd:sequence>		</xsd:complexType>	</xsd:element>	<xsd:element name="CancelPushReceipt">		<xsd:annotation>			<xsd:documentation>Returned by the web service after cancelling a push request.  The web service can decide on the contend of the message</xsd:documentation>		</xsd:annotation>		<xsd:complexType>			<xsd:complexContent>				<xsd:extension base="xsd:anyType">					<xsd:attribute name="Processed" use="required">						<xsd:annotation>							<xsd:documentation>If the registered push has been cancelled Processed with be set to True.  If the cancellation failed for some reason, Processed will be returned as False.</xsd:documentation>						</xsd:annotation>					</xsd:attribute>				</xsd:extension>			</xsd:complexContent>		</xsd:complexType>	</xsd:element>	<xsd:element name="Point" substitutionGroup="gml:Point">		<xsd:complexType>			<xsd:complexContent>				<xsd:restriction base="gml:PointType">					<xsd:sequence>						<xsd:element ref="gml:pos"/>					</xsd:sequence>					<xsd:attribute name="srsName" type="xsd:anyURI" use="required" fixed="osgb:BNG"/>				</xsd:restriction>			</xsd:complexContent>		</xsd:complexType>	</xsd:element>	<xsd:element name="LineString" substitutionGroup="gml:LineString">		<xsd:complexType>			<xsd:complexContent>				<xsd:restriction base="gml:LineStringType">					<xsd:sequence>						<xsd:choice>							<xsd:choice minOccurs="2" maxOccurs="unbounded">								<xsd:element ref="gml:pos"/>							</xsd:choice>							<xsd:element ref="gml:posList"/>						</xsd:choice>					</xsd:sequence>					<xsd:attribute name="srsName" type="xsd:anyURI" use="required" fixed="osgb:BNG"/>				</xsd:restriction>			</xsd:complexContent>		</xsd:complexType>	</xsd:element>	<xsd:element name="Polygon" substitutionGroup="gml:Polygon">		<xsd:complexType>			<xsd:complexContent>				<xsd:restriction base="gml:PolygonType">					<xsd:sequence>						<xsd:element ref="exterior" minOccurs="0"/>					</xsd:sequence>					<xsd:attribute name="srsName" type="xsd:anyURI" use="required" fixed="osgb:BNG"/>				</xsd:restriction>			</xsd:complexContent>		</xsd:complexType>	</xsd:element>	<xsd:element name="exterior" substitutionGroup="gml:exterior">		<xsd:complexType>			<xsd:complexContent>				<xsd:restriction base="gml:AbstractRingPropertyType">					<xsd:sequence>						<xsd:element ref="LinearRing"/>					</xsd:sequence>				</xsd:restriction>			</xsd:complexContent>		</xsd:complexType>	</xsd:element>	<xsd:element name="LinearRing" substitutionGroup="gml:LinearRing">		<xsd:complexType>			<xsd:complexContent>				<xsd:restriction base="gml:LinearRingType">					<xsd:sequence>						<xsd:choice>							<xsd:choice minOccurs="4" maxOccurs="unbounded">								<xsd:element ref="gml:pos"/>							</xsd:choice>							<xsd:element ref="gml:posList"/>						</xsd:choice>					</xsd:sequence>					<xsd:attribute name="srsName" type="xsd:anyURI" use="required" fixed="osgb:BNG"/>				</xsd:restriction>			</xsd:complexContent>		</xsd:complexType>	</xsd:element></xsd:schema>