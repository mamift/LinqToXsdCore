												<xs:sequence>
													<xs:element ref="Description"/>
													<xs:element name="AnnualAmount" type="MonetaryStructure"/>
													<xs:element name="PercentageChange" type="NonNegativeDecimalType" minOccurs="0"/>
												</xs:sequence>
											</xs:complexType>
										</xs:element>
										<xs:element ref="CalculatedAmount"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="OtherDebit" minOccurs="0" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element ref="Date"/>
										<xs:element name="OtherDebitDesc" type="xs:string"/>
										<xs:element ref="Amount"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="TotalReduction" type="MonetaryStructure"/>
							<xs:element name="Reduction" minOccurs="0" maxOccurs="20">
								<xs:complexType>
									<xs:sequence>
										<xs:element ref="Description" minOccurs="0"/>
										<xs:element ref="Period" minOccurs="0"/>
										<xs:element ref="CalculatedAmount"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="TotalPayment" type="MonetaryStructure"/>
							<xs:element ref="PaymentMade" minOccurs="0" maxOccurs="unbounded"/>
							<xs:element name="Adjustment" minOccurs="0">
								<xs:complexType>
									<xs:sequence>
										<xs:element ref="Description" minOccurs="0"/>
										<xs:element ref="Date"/>
										<xs:element ref="Amount"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="Arrears" minOccurs="0">
								<xs:complexType>
									<xs:sequence>
										<xs:element ref="Description" minOccurs="0"/>
										<xs:element ref="Period"/>
										<xs:element ref="Amount"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="PaymentDue">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="TotalDue" type="MonetaryStructure"/>
