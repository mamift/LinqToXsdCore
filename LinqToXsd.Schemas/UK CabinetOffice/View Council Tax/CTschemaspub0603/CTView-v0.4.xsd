											<xs:complexType>
												<xs:sequence>
													<xs:element ref="Date"/>
													<xs:element ref="Amount"/>
												</xs:sequence>
											</xs:complexType>
										</xs:element>
										<xs:element name="PaymentDiscount" minOccurs="0">
											<xs:complexType>
												<xs:sequence>
													<xs:element ref="Date"/>
													<xs:element ref="Amount"/>
													<xs:element name="Percentage" type="xs:decimal"/>
												</xs:sequence>
											</xs:complexType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
