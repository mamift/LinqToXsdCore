						<xs:sequence>
							<xs:element name="YearDescription" type="xs:string" minOccurs="0"/>
							<xs:element ref="YearPeriod"/>
							<xs:element name="CTBand" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element ref="Period"/>
										<xs:element name="Band" type="BandType"/>
										<xs:element name="BandReduction" type="xs:integer" minOccurs="0"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							<xs:element name="YearCharge" maxOccurs="unbounded">
								<xs:complexType>
									<xs:sequence>
										<xs:element ref="Description"/>
										<xs:element name="TotalCharge" type="MonetaryStructure"/>
										<xs:element ref="Period"/>
										<xs:element name="ChargeComponent" maxOccurs="unbounded">
