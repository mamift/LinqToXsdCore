	<xs:simpleType name="DecimalType">
		<xs:restriction base="xs:decimal">
			<xs:pattern value="-?(([1-9][0-9]*)|0)\.[0-9]{2,2}"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="NonNegativeDecimalType">
		<xs:restriction base="DecimalType">
			<xs:minInclusive value="0"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="ISOcurrency">
		<xs:restriction base="xs:string">
			<xs:enumeration value="GBP"/>
			<xs:enumeration value="EUR"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:complexType name="MonetaryStructure">
		<xs:simpleContent>
			<xs:extension base="DecimalType">
				<xs:attribute name="Currency" type="ISOcurrency" use="optional"/>
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>
	<xs:simpleType name="AccountNumberType">
		<xs:restriction base="xs:string">
			<xs:minLength value="2"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:complexType name="PeriodType">
		<xs:sequence>
			<xs:element name="StartDate" type="xs:date"/>
			<xs:element name="EndDate" type="xs:date" minOccurs="0"/>
			<xs:element name="NumberofDays" type="xs:integer" minOccurs="0"/>
		</xs:sequence>
	</xs:complexType>
	<xs:simpleType name="BandType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="A"/>
			<xs:enumeration value="B"/>
			<xs:enumeration value="C"/>
			<xs:enumeration value="D"/>
			<xs:enumeration value="E"/>
			<xs:enumeration value="F"/>
			<xs:enumeration value="G"/>
			<xs:enumeration value="H"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="OrganisationNameType">
		<xs:restriction base="xs:string">
			<xs:minLength value="100"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:element name="Name">
		<xs:complexType>
			<xs:choice>
				<xs:element name="PersonName" type="apd:CitizenNameStructure"/>
				<xs:element name="OrganisationName" type="OrganisationNameType"/>
			</xs:choice>
		</xs:complexType>
	</xs:element>
	<xs:element name="Amount" type="MonetaryStructure"/>
	<xs:element name="CorrespondenceAddress">
		<xs:complexType>
			<xs:choice>
				<xs:element name="OverseasAddress" type="apd:InternationalAddressStructure"/>
				<xs:element name="UKAddress" type="apd:UKAddressStructure"/>
			</xs:choice>
			<xs:attribute name="private" default="no"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="CurrentBand" type="BandType"/>
	<xs:element name="Date" type="xs:date"/>
	<xs:element name="MOP" type="xs:string"/>
	<xs:element name="AccountNumber" type="AccountNumberType"/>
	<xs:element name="PaymentMade">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="Description" minOccurs="0"/>
				<xs:element ref="Date"/>
				<xs:element ref="MOP"/>
				<xs:element ref="Amount"/>
				<xs:element name="ChequeDetails" type="xs:integer" minOccurs="0"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="Period" type="PeriodType"/>
	<xs:element name="Property">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="LAPropertyReference" type="AccountNumberType" minOccurs="0"/>
				<xs:element ref="PropertyAddress"/>
				<xs:element ref="CurrentBand"/>
				<xs:element ref="Period"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="PropertyAddress" type="apd:UKAddressStructure"/>
	<xs:element name="Recovery">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="RecoveryFlag"/>
				<xs:element ref="RecoveryText" minOccurs="0"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="RecoveryFlag" type="apd:YesNoType"/>
	<xs:element name="RecoveryText" type="xs:string"/>
	<xs:element name="YearPeriod" type="PeriodType"/>
	<xs:element name="Year" type="xs:gYear"/>
	<xs:element name="Description" type="xs:string"/>
	<xs:element name="ExtractionDate" type="xs:dateTime"/>
	<xs:element name="CalculatedAmount" type="MonetaryStructure"/>
</xs:schema>
